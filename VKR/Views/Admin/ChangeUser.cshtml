
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование пользователя</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="~/Content/Style/js/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/Content/Style/css/jquery-ui.css" />
    <link href="~/Content/Style/css/mainstyle.css" rel="stylesheet" />
</head>
<body>
    <div id="main-form">
        @if (ViewBag.Token == 1)
        {
        <h2>Редактирование пользователя</h2>
        <p>У вас нет доступа к этой странице</p>
        }
        else
        {
        <form method="post" action="./ChUser" enctype="multipart/form-data">
            <h2>Редактирование пользователя</h2>
            <br />
            <input type="number" name="ID" value="@ViewBag.RedUser.UserID" hidden />
            <p>Логин:</p>
            <input type="text" name="Login" id="Login" value="@ViewBag.RedUser.Login" style="width: 301px" class="form-input" required />
            <br />
            <br />
            <p>Фамилия:</p>
            <input type="text" name="FirstName" value="@ViewBag.RedUser.FirstName" style="width: 301px" class="form-input" required />
            <br />
            <br />
            <p>Имя:</p>
            <input type="text" name="Name" value="@ViewBag.RedUser.Name" style="width: 301px" class="form-input" required />
            <br />
            <br />
            <p>Отчество:</p>
            <input type="text" name="Patronymic" value="@ViewBag.RedUser.Patronymic" style="width: 301px" class="form-input" />
            <br />
            <br />
            <p>Email:</p>
            <input type="email" name="Email" value="@ViewBag.RedUser.Email" style="width: 301px" class="form-input" required />
            <br />
            <br />
            <p>Телефон:</p>
            <input type="tel" name="PhoneNumber" value="@ViewBag.RedUser.PhoneNumber" style="width: 301px" class="form-input" required />
            <br />
            <br />
            <p>Права:</p>
            @if (@ViewBag.RedUser.Status == 0)
            {
            <select id="entitlement" name="Entitlement" style="width: 301px" class="form-input" required>
                <option id="0" selected="">Покупатель</option>
                <option id="1">Модератор</option>
                <option id="2">Администратор</option>
            </select>
            }
            else if (@ViewBag.RedUser.Status == 1)
            {
        <select id="entitlement" name="Entitlement" style="width: 301px" class="form-input" required>
            <option id="0">Покупатель</option>
            <option id="1" selected="">Модератор</option>
            <option id="2">Администратор</option>
        </select>
            }
            else
            {
    <select id="entitlement" name="Entitlement" style="width: 301px" class="form-input" required>
        <option id="0">Покупатель</option>
        <option id="1">Модератор</option>
        <option id="2" selected="">Администратор</option>
    </select>
            }
            <br />
            <br />
            <p>Текущее изображение:</p>
            <img src="~/Content/Style/Files/@ViewBag.RedUser.Picture" width="100" height="100" alt="Изображение не добавлено">
            <p>Загрузить новое изображение:</p>
            <input type="file" name="upload" accept="image/jpeg,image/png" class="form-input" style="height: 38px">
            <br />
            <br />
            <a href="../Admin/ListUsers" class="link-but" style="width:80px; float: right">Отмена</a>
            <input type="submit" class="link-but" />
        </form>
        }
    </div>
</body>
</html>
