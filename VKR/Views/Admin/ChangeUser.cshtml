
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование пользователя</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="~/Content/Style/js/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/Content/Style/css/jquery-ui.css" />
</head>
<body>
    <div>
        <form method="post" action="./ChUser?UserId=@ViewBag.UserID" style="background: #ccc; border: 1px; padding: 20px;">
            <input type="number" name="ID" value="@ViewBag.RedUser.UserID" hidden />
            <p>Логин:</p>
            <input type="text" name="Login" id="Login" value="@ViewBag.RedUser.Login" required />
            <br />
            <br />
            <p>Фамилия:</p>
            <input type="text" name="FirstName" value="@ViewBag.RedUser.FirstName" required />
            <br />
            <br />
            <p>Имя:</p>
            <input type="text" name="Name" value="@ViewBag.RedUser.Name" required />
            <br />
            <br />
            <p>Отчество:</p>
            <input type="text" name="Patronymic" value="@ViewBag.RedUser.Patronymic" />
            <br />
            <br />
            <p>Email:</p>
            <input type="email" name="Email" value="@ViewBag.RedUser.Email" required />
            <br />
            <br />
            <p>Телефон:</p>
            <input type="tel" name="PhoneNumber" value="@ViewBag.RedUser.PhoneNumber" required />
            <br />
            <br />
            <p>Права:</p>
            @if (@ViewBag.RedUser.Status == 0)
    {
        <select id="entitlement" name="Entitlement" required>
            <option id="0" selected="">Покупатель</option>
            <option id="1">Модератор</option>
            <option id="2">Администратор</option>
        </select>
}
else if (@ViewBag.RedUser.Status == 1)
{
        <select id="entitlement" name="Entitlement" required>
            <option id="0">Покупатель</option>
            <option id="1" selected="">Модератор</option>
            <option id="2">Администратор</option>
        </select>
}
else
{
        <select id="entitlement" name="Entitlement" required>
            <option id="0">Покупатель</option>
            <option id="1">Модератор</option>
            <option id="2" selected="">Администратор</option>
        </select>
}
            <br />
            <br />
            <a href="../Admin/ListUsers?UserId=@ViewBag.UserID">Отмена</a>
            <br />
            <input type="submit" />
        </form>
    </div>
    <script>
        $("#entitlement").selectmenu();
    </script>
</body>
</html>
