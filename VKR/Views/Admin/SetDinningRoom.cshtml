
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Настройка точки питания</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="~/Content/Style/js/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/Content/Style/css/jquery-ui.css" />
    <link href="~/Content/Style/css/mainstyle.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="allform">
            <h2>Настройка точки питания</h2>
            <form method="post" action="./SetDR?UserId=@ViewBag.UserID">
                <div>
                    <p>Адрес точки: </p>
                    <input type="text" name="Adress" value="@ViewBag.DinningRoom.Adress" required>
                    <p>Телефон: </p>
                    <input type="tel" name="Phone" value="@ViewBag.DinningRoom.PhoneNum" required>
                    <p>E-mail: </p>
                    <input type="email" name="Email" value="@ViewBag.DinningRoom.Email" required>
                    <p>Контактное лицо: </p>
                    <input type="text" name="Login" value="@ViewBag.Manager.Login" required>
                    <br />
                    <p>Количество блюд/интервал времени: </p>
                    <input type="number" name="Dishes" value=" @ViewBag.DinningRoom.Dishes" required>
                    <p>/</p>
                    <input type="number" name="Interval" value="@ViewBag.DinningRoom.Interval" required>
                    <br />
                </div>
                <div>
                    <p>Рабочие дни: </p>
                    @foreach (var day in ViewBag.WorkDays)
    {
        if (day.IsWorkDay)
        {
                <p><input type="checkbox" name="@day.DayWorkID" id="@day.DayWorkID" value="@day.DayWorkID" checked />@day.Name</p>
}
else
{
                <p><input type="checkbox" name="@day.DayWorkID" id="@day.DayWorkID" value="@day.DayWorkID" />@day.Name</p>
}
                <p>Начало рабочего дня: <input type="number" name="StDH_@day.DayWorkID" value="@day.StartDayHour" style="width: 50px"/>:<input type="number" name="StDM_@day.DayWorkID" value="@day.StartDayMin" style="width: 50px"/></p>
                <p>Конец рабочего дня: <input type="number" name="EDH_@day.DayWorkID" value="@day.EndDayHour" style="width: 50px"/>:<input type="number" name="EDM_@day.DayWorkID" value="@day.EndDayMin" style="width: 50px"/></p>
                <br />
}
                </div>
                <p>
                    <a href="../Admin/Home?UserId=@ViewBag.UserID" class="but">Отмена</a>
                    <input type="submit" value="Сохранить" class="but">
                </p>
            </form>
        </div>
    </div>
    <script>
        $(".but").button();
    </script>
</body>
</html>
