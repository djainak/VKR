
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление пункта меню</title>
</head>
<body>
    <div>
        <form method="post" action="./postkaka" style="background: #ccc; border: 1px solid black; padding: 20px;">
            <input type="hidden" value="@ViewBag.MenuItem.Id" name="MenuItemId" />
            <p>Введите название блюда:</p>
            <input type="text" name="Name" placeholder="Name" />
            <br />
            <br />
            <p>Введите состав:</p>
            <input type="text" name="Description" placeholder="Description" />
            <br />
            <br />
            <p>Введите цену:</p>
            <input type="text" name="Price" placeholder="Price" />
            <br />
            <br />
            <input type="submit" />
        </form>
    </div>
</body>
</html>
